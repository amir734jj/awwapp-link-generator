@{
    ViewBag.Title = "AwwApp link generator";
    Layout = "_Layout";
}

<div ng-controller="linkGenCtrl">

    <h2>AwwApp link generator</h2>
    <p>Input number of links needed and it will generate the links:</p>

    <form class="form-horizontal" ng-submit="getLinks($event)">
        <div class="form-group">
            <label class="control-label col-sm-2" for="count">Count of links:</label>
            <div class="col-sm-10">
                <input type="number" class="form-control" id="count" placeholder="Enter count" name="count" min="1" max="20" ng-model="count"/>
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </div>
    </form>


    <div ng-if="links.length">
        <hr/>

        <pre>{{text}}</pre>
        
        <div class="row">
            <div class="col-sm-4 col-sm-offset-8">
                <div class="pull-right">
                    <button ng-click="copyText()" class="btn btn-default"> Copy to clipboard </button>
                </div>
            </div>
        </div>
    </div>
</div>